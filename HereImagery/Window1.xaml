<Window x:Class="NokiaDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NokiaDemo"
    xmlns:mapcore="clr-namespace:Ptv.XServer.Controls.Map;assembly=Ptv.XServer.Controls.Map" 
    Title="Window1" Height="600" Width="800">
    <Grid x:Name="LayoutRoot">
        <mapcore:WpfMap Name="Map" Center="8, 49" MinZoom="0" MaxZoom="20" Zoom="9" />
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Background="White">
            <RadioButton Name="M0" Content="BaseMap" IsChecked="True" Checked="ModeChecked"/>
            <RadioButton Name="M1" Content="BasMap+Street" Checked="ModeChecked"/>
            <RadioButton Name="M2" Content="BaseMap+Labels" Checked="ModeChecked"/>
            <RadioButton Name="M3" Content="BaseMap+Street+Labels" Checked="ModeChecked"/>
            <RadioButton Name="M4" Content="Satellite" Checked="ModeChecked"/>
            <RadioButton Name="M5" Content="Satellite+Street" Checked="ModeChecked"/>
            <RadioButton Name="M6" Content="Terrain" Checked="ModeChecked"/>
            <RadioButton Name="M7" Content="Terrain+Street" Checked="ModeChecked"/>
        </StackPanel>
    </Grid>
</Window>
